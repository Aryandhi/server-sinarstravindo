<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <!-- Button trigger modal -->
      <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
        <i class="fas fa-plus"></i>
      </button> -->
      <a class="dropdown-item" href="http://localhost:3001/admin/download">
        Download
      </a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Capacity</th>
              <th>Destination</th>
              <th>Packages</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < customer.length; i++){ %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= customer[i].name %></td>
                <td><%= customer[i].email %></td>
                <td><%= customer[i].phone %></td>
                <td><%= customer[i].capacity %></td>
                <td><%= customer[i].destination %></td>
                <td><%= customer[i].packages %></td>
                <td><%= customer[i].departure_date.toLocaleString().split(',')[0] %></td>
                <td>
                  <form action="/admin/customer/<%= customer[i].id %>?_method=DELETE" method="POST">
                    <a href="javascript:void();" type="button" class="btn btn-warning btn-circle btn-sm button-update"
                      data-id="<%= customer[i].id %>" 
                      data-name="<%= customer[i].name %>"
                      data-email="<%= customer[i].email %>"
                      data-phone="<%= customer[i].phone %>"
                      data-capacity="<%= customer[i].capacity %>"
                      data-destination="<%= customer[i].destination %>"
                      data-packages="<%= customer[i].packages %>"
                      data-departure_date="<%= customer[i].departure_date %>">
                      <i class="fas fa-edit"></i>
                    </a>
                    <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>